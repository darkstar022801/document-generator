@page
@model DocumentGenerator.Models.FormModel
@{}

<h1>Step3</h1>

@using (Html.BeginForm("Step4", "Form", FormMethod.Post))
{
    <div class="form-group">
        <div>
            @Html.HiddenFor(x => x.Name, "Value")

            @Html.HiddenFor(x => x.Step1Model.Field1, "Value")
            @Html.HiddenFor(x => x.Step1Model.Field2, "Value")

            @Html.HiddenFor(x => x.Step2Model.Field1, "Value")
            @Html.HiddenFor(x => x.Step2Model.Field2, "Value")
        </div>
        <div>
            @Html.LabelFor(m => m.Step3Model.Field1)
        </div>

        <div>
            @Html.TextBoxFor(model => model.Step3Model.Field1, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.Step3Model.Field2)
        </div>

        <div>
            @Html.TextBoxFor(model => model.Step3Model.Field2, new { @class = "form-control" })
        </div>
    </div>

    <div>
        <input type="submit" value="Next" />
    </div>

}


